<div class="content-wrapper buffer-both text-center">
  <div class="buffer-both">
    <h1 class="title-medium"><%= t('.title') %></h1>
  </div>

  <% @users.each do |user| %>
    <div class="users-list-item">
      <%= link_to image_tag(user_avatar(user), class: 'user-image-div user-image-div-small'), user_path(user) %>
    </div>
  <% end %>

  <div class="buffer-both">
    <%= render @hashtags %>
  </div>
</div>
